[%- IF desc.exists('Options') -%]
Options [% desc.Options.join(' ') %]
[% END -%]
[%- IF desc.exists('EnableSendfile') -%]
EnableSendfile [% desc.EnableSendfile ? "on" : "off" %]
[% END -%]
[%- to_process = ['access', 'lang', 'ssl', 'auth', 'kerberos', 'shibboleth'] -%] 
[%- FOREACH p IN  to_process -%]
[%-      IF desc.exists(p) -%] 
[%-         template = "metaconfig/httpd/config/" _ p.lower _ ".tt" -%]
[%          INCLUDE $template desc=desc.$p %]
[%      END -%]
[%- END %]
