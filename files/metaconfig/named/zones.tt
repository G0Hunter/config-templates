[% FOREACH zone IN desc %]
zone "[% zone.name %]" [% zone.class %] {
    type [% zone.type %];
    file "[% zone.file %]";
    [% FOREACH i IN ['transfers-in', 'transfers-out'] -%]
    [%- IF zone.$i -%]
    [% i %] [% zone.$i %];
    [%- END -%]
    [%- END %]
    [% IF zone.masters %]
    masters {
        [% FOREACH i IN zone.masters %]
        [% i %];
        [%- END %]
    };
    [% END %]
};
[% END %]
